/**
 * 16-bit multiplexor: 
 * for i = 0..15 out[i] = a[i] if sel == 0 
 *                        b[i] if sel == 1
 *  (b and sel) or (a and not sel)
 */

CHIP Mux16 {
    IN a[16], b[16], sel;
    OUT out[16];

    PARTS:
    And16(a = b, b[0] = sel, b[1] = sel, b[2] = sel, b[3] = sel, b[4] = sel, b[5] = sel, b[6] = sel, b[7] = sel, 
    b[8] = sel, b[9] = sel, b[10] = sel, b[11] = sel, b[12] = sel, b[13] = sel, b[14] = sel, b[15] = sel, out = aAndSel);
    Not16(in[0] = sel, in[1] = sel, in[2] = sel, in[3] = sel, in[4] = sel, in[5] = sel, in[6] = sel, in[7] = sel, 
    in[8] = sel, in[9] = sel, in[10] = sel, in[11] = sel, in[12] = sel, in[13] = sel, in[14] = sel, in[15] = sel, out = notSel);
    And16(a = a, b = notSel, out = bAndNotSel);
    Or16(a = aAndSel, b = bAndNotSel, out = out);
}
